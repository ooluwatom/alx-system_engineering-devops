#!/usr/bin/env bash
# Displays all active IPv4 addresses

# get all active network interfaces
interfaces=$(ifconfig | grep -Eo '^[a-zA-Z0-9]+' | tr '\n' ' ')

# iterate through each interface and display its IPv4 address
for interface in $interfaces; do
    ipv4=$(ifconfig $interface | grep -Eo 'inet addr:[^ ]+' | sed 's/inet addr://')
    if [[ -n $ipv4 ]]; then
        echo "$interface: $ipv4"
    fi# get all active network interfaces
done
interfaces=$(ifconfig | grep -Eo '^[a-zA-Z0-9]+' | tr '\n' ' ')
